{
	"NLog": {
		"variables": {
			"var_logdir": "${specialfolder:folder=LocalApplicationData}\\Vodovoz"
		},
		"targets": {
			"async": true,
			"logconsole": {
				"type": "Console"
			},
			"logfile": {
				"type": "File",
				"fileName": "${var_logdir}\\WaterDelivery.log",
				"archiveFileName": "${var_logdir}\\WaterDelivery.{#}.log",
				"archiveEvery": "Day",
				"archiveNumbering": "Rolling",
				"maxArchiveFiles": 3,
				"layout": "${longdate}|${level}|${logger}|${message} ${onexception:${newline}${exception:format=tostring}}"
			},
			"console": {
				"type": "ColoredConsole",
				"layout": "${longdate} ${uppercase:${level}} ${message}",
				"wordHighlightingRules": [
					{
						"text": "DEBUG",
						"foregroundColor": "DarkGreen"
					},
					{
						"text": "WARNING",
						"foregroundColor": "Yellow"
					},
					{
						"text": "ERROR",
						"foregroundColor": "Red"
					},
					{
						"text": "FATAL",
						"foregroundColor": "Red"
					}
				]
			}
		},
		"rules": [
			{
				"logger": "Vodovoz.Commons.ViewModelWidgetsRegistrar",
				"final": true
			},
			{
				"logger": "*",
				"minLevel": "Debug",
				"writeTo": "logfile"
			},
			{
				"logger": "*",
				"minLevel": "Trace",
				"writeTo": "console"
			}
		]
	}
}
