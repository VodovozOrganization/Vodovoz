{
	"ConnectionStrings": {
		"DefaultConnection": ""
	},
	"SecurityToken": {
		"Issuer": "",
		"Audience": "",
		"Key": "",
		"Lifetime": 3600
	},
	"DatabaseConnectionSettings": {
		"ServerName": "",
		"Port": 0,
		"DatabaseName": "",
		"UserName": "",
		"Password": ""
	},
	"Health": {
		"BaseAddress": "",
		"Authorization": {
			"User": "",
			"Password": ""
		}
	},
	"NLog": {
		"extensions": [
			{ "assembly": "NLog.Targets.Seq" },
			{ "assembly": "NLog.Web.AspNetCore" }
		],
		"variables": {
			"var_logdir": "/var/log/vodovoz/logistics_events_api/production/"
		},
		"targets": {
			"async": true,
			"logconsole": {
				"type": "Console"
			},
			"logfile": {
				"type": "File",
				"fileName": "${var_logdir}\\common.log",
				"archiveFileName": "${var_logdir}\\common.{#}.log",
				"archiveEvery": "Day",
				"archiveNumbering": "Rolling",
				"maxArchiveFiles": 3,
				"layout": "${longdate}|${level}|${logger}|${message} ${onexception:${newline}${exception:format=tostring}}"
			},
			"requestsLog": {
				"type": "File",
				"fileName": "${var_logdir}\\requests.log",
				"archiveFileName": "${var_logdir}\\requests.{#}.log",
				"archiveEvery": "Day",
				"archiveNumbering": "Rolling",
				"maxArchiveFiles": 3,
				"layout": "${longdate}|${level}|${message} ${onexception:${newline}${exception:format=tostring}}"
			},
			"console": {
				"type": "ColoredConsole",
				"layout": "${longdate} ${uppercase:${level}} ${message}",
				"wordHighlightingRules": [
					{
						"text": "DEBUG",
						"foregroundColor": "DarkGreen"
					},
					{
						"text": "WARNING",
						"foregroundColor": "Yellow"
					},
					{
						"text": "ERROR",
						"foregroundColor": "Red"
					},
					{
						"text": "FATAL",
						"foregroundColor": "Red"
					}
				]
			}
		},
		"rules": [
			{
				"logger": "*",
				"minLevel": "Info",
				"writeTo": "seq"
			},
			{
				"logger": "Microsoft.*",
				"minLevel": "Trace",
				"final": true
			},
			{
				"logger": "*",
				"minLevel": "Debug",
				"writeTo": "logfile"
			},
			{
				"logger": "*",
				"minLevel": "Trace",
				"writeTo": "console"
			}
		]
	}
}
