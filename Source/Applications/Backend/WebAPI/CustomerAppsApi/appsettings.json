{
	"ConnectionStrings": {
		"Redis": ""
	},
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft": "Warning",
			"Microsoft.Hosting.Lifetime": "Information"
		}
	},
	"DatabaseConnectionSettings": {
		"ServerName": "",
		"Port": 0,
		"DatabaseName": "",
		"UserName": "",
		"Password": ""
	},
	"RequestsMinutesLimits": {
		"PricesAndStocksRequestFrequencyLimit": 1,
		"NomenclaturesRequestFrequencyLimit": 60,
		"PromotionalSetsRequestFrequencyLimit": 1,
		"FreePackagesRequestFrequencyLimit": 1
	},
	"RabbitOptions": {
		"EmailSendQueue": "",
		"EmailStatusUpdateQueue": "",
		"AuthorizationCodesExchange": "",
		"AuthorizationCodesQueue": ""
	},
	"MessageTransport": {
		"Host": "",
		"Port": "",
		"VirtualHost": "",
		"Username": "",
		"Password": "",
		"UseSSL": true,
		"AcceptablePolicyErrors": ""
	},
	"Mailjet": {
		"BaseUri": "",
		"Username": "",
		"Password": "",
		"Sandbox": false
	},
	"AllowedHosts": "*",
	"NLog": {
		"autoReload": true,
		"autoShutdown": true,
		"extensions": [
			{ "assembly": "NLog.Targets.Seq" }
		],
		"variables": {
			"logDirectory": "C:\\inetpub\\logs\\CustomerAppsApi"
		},
		"targets": {
			"async": true,
			"backHole": {
				"type": "Null",
				"formatMessage": false
			},
			"logfile": {
				"type": "File",
				"fileName": "${logDirectory}\\common.log",
				"archiveFileName": "${logDirectory}\\common.{#}.log",
				"archiveEvery": "Day",
				"archiveNumbering": "Rolling",
				"maxArchiveFiles": 3,
				"layout": "${longdate}|${uppercase:${level}}|${logger:shortName=true}|${message} ${onexception:${newline}${exception:format=tostring}}"
			},
			"requestsLog": {
				"type": "File",
				"fileName": "${logDirectory}\\requests.log",
				"archiveFileName": "${logDirectory}\\requests.{#}.log",
				"archiveEvery": "Day",
				"archiveNumbering": "Rolling",
				"maxArchiveFiles": 3,
				"layout": "${longdate}|${level}|${message} ${onexception:${newline}${exception:format=tostring}}"
			},
			"console": {
				"type": "ColoredConsole",
				"layout": "${longdate}|${uppercase:${level}}|${logger}|${message} ${onexception:${newline}${exception:format=tostring}}",
				"wordHighlightingRules": [
					{
						"text": "DEBUG",
						"foregroundColor": "DarkGreen"
					},
					{
						"text": "WARNING",
						"foregroundColor": "Yellow"
					},
					{
						"text": "ERROR",
						"foregroundColor": "Red"
					},
					{
						"text": "FATAL",
						"foregroundColor": "Red"
					}
				]
			},
			"seq": {
				"type": "BufferingWrapper",
				"bufferSize": 200,
				"flushTimeout": 2000,
				"slidingTimeout": false,
				"target": {
					"type": "Seq",
					"serverUrl": "",
					"apiKey": "",
					"properties": [
						{
							"name": "Source",
							"value": "${Logger}"
						},
						{
							"name": "ThreadId",
							"value": "${ThreadId}",
							"as": "number"
						},
						{
							"name": "MachineName",
							"value": "${MachineName}"
						}
					]
				}
			}
		},
		"rules": [
			{
				"logger": "CustomerAppsApi.Middleware.ResponseLoggingMiddleware",
				"minLevel": "Trace",
				"writeTo": "requestsLog",
				"final": true
			},
			{
				"logger": "*",
				"minLevel": "Info",
				"writeTo": "seq"
			},
			{
				"logger": "*",
				"minLevel": "Debug",
				"writeTo": "console"
			},
			{
				"logger": "*",
				"minLevel": "Debug",
				"writeTo": "logfile"
			}
		]
	}
}
