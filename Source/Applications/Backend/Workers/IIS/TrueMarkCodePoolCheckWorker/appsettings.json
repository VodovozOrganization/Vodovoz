{
	"DatabaseConnectionSettings": {
		"ServerName": "",
		"Port": 0,
		"DatabaseName": "",
		"UserName": "",
		"Password": ""
	},
	"NLog": {
		"autoReload": true,
		"autoShutdown": true,
		"extensions": [
			{
				"assembly": "NLog.Targets.Seq"
			}
		],
		"variables": {
			"var_logdir": "C:\\inetpub\\logs\\TrueMarkCodePoolCheckWorker"
		},
		"targets": {
			"async": true,
			"logconsole": {
				"type": "Console"
			},
			"logfile": {
				"type": "File",
				"fileName": "${var_logdir}\\common.log",
				"archiveFileName": "${var_logdir}\\common.{#}.log",
				"archiveEvery": "Day",
				"archiveNumbering": "Rolling",
				"maxArchiveFiles": 3,
				"layout": "${longdate}|${level}|${logger}|${message} ${onexception:${newline}${exception:format=tostring}}"
			},
			"console": {
				"type": "ColoredConsole",
				"layout": "${longdate} ${uppercase:${level}} ${message}",
				"wordHighlightingRules": [
					{
						"text": "DEBUG",
						"foregroundColor": "DarkGreen"
					},
					{
						"text": "WARNING",
						"foregroundColor": "Yellow"
					},
					{
						"text": "ERROR",
						"foregroundColor": "Red"
					},
					{
						"text": "FATAL",
						"foregroundColor": "Red"
					}
				]
			},
			"seq": {
				"type": "BufferingWrapper",
				"bufferSize": 200,
				"flushTimeout": 2000,
				"slidingTimeout": false,
				"target": {
					"type": "Seq",
					"serverUrl": "",
					"apiKey": "",
					"properties": [
						{
							"name": "Source",
							"value": "${Logger}"
						},
						{
							"name": "ThreadId",
							"value": "${ThreadId}",
							"as": "number"
						},
						{
							"name": "MachineName",
							"value": "${MachineName}"
						}
					]
				}
			}
		},
		"rules": [
			{
				"logger": "Microsoft.*",
				"minLevel": "Trace",
				"final": true
			},
			{
				"logger": "*",
				"minLevel": "Info",
				"writeTo": "seq"
			},
			{
				"logger": "*",
				"minLevel": "Debug",
				"writeTo": "logfile"
			},
			{
				"logger": "*",
				"minLevel": "Trace",
				"writeTo": "console"
			}
		]
	}
}
