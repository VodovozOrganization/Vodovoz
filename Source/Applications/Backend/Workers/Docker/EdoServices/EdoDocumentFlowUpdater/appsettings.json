{
	"DatabaseConnectionSettings": {
		"ServerName": "dev.sql.vod.qsolution.ru",
		"Port": "3307",
		"DatabaseName": "Vodovoz_dev_beta",
		"UserName": "vodovoz_service",
		"Password": "9VKkNtjlBif07lSu"
	},
	"DocumentFlowUpdaterOptions": {
		"DelayBetweenDocumentFlowProcessingInSeconds": 10
	},
	"TaxcomApiOptions": {
		"BaseAddress": "",
		"GetDocFlowRawDataEndPoint": "/api/GetDocFlowRawData",
		"GetDocFlowsUpdatesEndPoint": "/api/GetDocFlowsUpdates"
	},
	"NLog": {
		"autoReload": true,
		"autoShutdown": true,
		"extensions": [
			{ "assembly": "NLog.Targets.Seq" }
		],
		"variables": {
			"logDirectory": "/var/log/app/"
		},
		"targets": {
			"async": true,
			"backHole": {
				"type": "Null",
				"formatMessage": false
			},
			"logfile": {
				"type": "File",
				"fileName": "${logDirectory}/common.log",
				"archiveFileName": "${logDirectory}/common.{#}.log",
				"archiveEvery": "Day",
				"archiveNumbering": "Rolling",
				"maxArchiveFiles": 3,
				"layout": "${longdate}|${uppercase:${level}}|${logger:shortName=true}|${message} ${onexception:${newline}${exception:format=tostring}}"
			},
			"console": {
				"type": "ColoredConsole",
				"layout": "${longdate}|${uppercase:${level}}|${logger}|${message} ${onexception:${newline}${exception:format=tostring}}",
				"wordHighlightingRules": [
					{
						"text": "DEBUG",
						"foregroundColor": "DarkGreen"
					},
					{
						"text": "WARNING",
						"foregroundColor": "Yellow"
					},
					{
						"text": "ERROR",
						"foregroundColor": "Red"
					},
					{
						"text": "FATAL",
						"foregroundColor": "Red"
					}
				]
			},
			"seq": {
				"type": "BufferingWrapper",
				"bufferSize": 200,
				"flushTimeout": 2000,
				"slidingTimeout": false,
				"target": {
					"type": "Seq",
					"serverUrl": "",
					"apiKey": "",
					"properties": [
						{
							"name": "Source",
							"value": "${Logger}"
						},
						{
							"name": "ThreadId",
							"value": "${ThreadId}",
							"as": "number"
						},
						{
							"name": "MachineName",
							"value": "${MachineName}"
						}
					]
				}
			}
		},
		"rules": [
			{
				"logger": "*",
				"minLevel": "Debug",
				"writeTo": "logfile"
			},
			{
				"logger": "*",
				"minLevel": "Debug",
				"writeTo": "console"
			}
		]
	}
}
