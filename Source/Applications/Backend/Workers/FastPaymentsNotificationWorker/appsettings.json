{
	"ConnectionStrings": {
		"DefaultConnection": "server=<Database Server>;port=3306;database=<Database>;uid=<user>;password=<password>"
	},
	"DatabaseConnectionSettings": {
		"ServerName": "",
		"Port": 0,
		"DatabaseName": "",
		"UserName": "",
		"Password": ""
	},
	"VodovozSiteNotificationService": {
		"BaseUrl": "<VodovozSiteNotificationBase>",
		"NotifyOfFastPaymentStatusChangedURI": "<NotifyOfFastPaymentStatusChangedURI>"
	},
	"NotifyWorker": {
		"NotifierRepeatOnTimelineInMinutes": [ 3, 10, 30, 60, 120, 300, 600, 1440, 2880 ]
	},
	"NLog": {
		"autoReload": true,
		"autoShutdown": true,
		"extensions": [
			{ "assembly": "NLog.Targets.Seq" }
		],
		"variables": {
			"logDirectory": "C:\\inetpub\\logs\\FastPaymentsNotificationWorker"
		},
		"targets": {
			"async": true,
			"backHole": {
				"type": "Null",
				"formatMessage": false
			},
			"logfile": {
				"type": "File",
				"fileName": "${logDirectory}\\common.log",
				"archiveFileName": "${logDirectory}\\common.{#}.log",
				"archiveEvery": "Day",
				"archiveNumbering": "Rolling",
				"maxArchiveFiles": 3,
				"layout": "${longdate}|${uppercase:${level}}|${logger:shortName=true}|${message} ${onexception:${newline}${exception:format=tostring}}"
			},
			"console": {
				"type": "ColoredConsole",
				"layout": "${longdate}|${uppercase:${level}}|${logger}|${message} ${onexception:${newline}${exception:format=tostring}}",
				"wordHighlightingRules": [
					{
						"text": "DEBUG",
						"foregroundColor": "DarkGreen"
					},
					{
						"text": "WARNING",
						"foregroundColor": "Yellow"
					},
					{
						"text": "ERROR",
						"foregroundColor": "Red"
					},
					{
						"text": "FATAL",
						"foregroundColor": "Red"
					}
				]
			},
			"seq": {
				"type": "BufferingWrapper",
				"bufferSize": 200,
				"flushTimeout": 2000,
				"slidingTimeout": false,
				"target": {
					"type": "Seq",
					"serverUrl": "",
					"apiKey": "",
					"properties": [
						{
							"name": "Source",
							"value": "${Logger}"
						},
						{
							"name": "ThreadId",
							"value": "${ThreadId}",
							"as": "number"
						},
						{
							"name": "MachineName",
							"value": "${MachineName}"
						}
					]
				}
			}
		},
		"rules": [
			{
				"logger": "*",
				"minLevel": "Info",
				"writeTo": "seq"
			},
			{
				"logger": "*",
				"minLevel": "Trace",
				"writeTo": "console"
			},
			{
				"logger": "*",
				"minLevel": "Debug",
				"writeTo": "logfile"
			}
		]
	}
}
